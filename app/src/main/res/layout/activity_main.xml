<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <RadioGroup
            android:id="@+id/radiogaga"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <RadioButton
                android:id="@+id/bulb"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:onClick="onClickBulb"
                android:text="@string/bulbasaur"></RadioButton>


            <RadioButton
                android:id="@+id/charm"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:onClick="onClickCharan"
                android:text="@string/charmander"></RadioButton>


            <RadioButton
                android:id="@+id/squi"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:onClick="onClickSquirtle"
                android:text="@string/squirtle">

            </RadioButton>

        </RadioGroup>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >
    <ImageView
        android:id="@+id/photo"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"


        android:contentDescription="@string/app_name"
        />
    </LinearLayout>

</LinearLayout>